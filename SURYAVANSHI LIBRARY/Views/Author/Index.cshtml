@model List<Author>
@{
    ViewData["Title"] = "Index Pop";
}

@*<partial name="_SuccessMessagePartial" />
*@
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Author List</h2>
        </div>       
    </div>
</div>

<table class="table table-striped table-bordered table-hover" width="100%">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Notes</th>
        
    </tr>
    </thead>
    <tbody>
    @foreach (var author in Model)
    {
        <tr>
            <td>@author.Id</td>
            <td>@author.Name</td>
            <td>@author.Notes</td>
            <td>
                <div class="btn-group">
                    <a asp-controller="Author" asp-action="Edit" asp-route-rollNo="@author.Id" 
                       class="btn btn-primary row-btn-size">Edit</a>
                       
                    
                    <a asp-controller="Author" asp-action="Delete" asp-route-rollNo="@author.Id" 
                       class="btn btn-danger row-btn-size"
                       onclick="confirmDelete2(@author.Id, this.href); return false;">Delete</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
