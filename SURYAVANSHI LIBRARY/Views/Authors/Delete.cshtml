<div>
    <h4>Author</h4>
    <hr />
    <div class="card text-white bg-warning mb-3">
        @if (TempData["Show-error-msg"] != null)
        {
            <div align="center">
                @TempData["Show-error-msg"]
            </div>
        }
    </div>
    <dl class="row">
        <dt class="col-sm-2">
